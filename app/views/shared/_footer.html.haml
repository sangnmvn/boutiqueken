%footer.footer-area
  -if !devise_controller?
    .footer-top
      .container
        .footer-top-inner
          .f-left.pull-left
            .rotate-image
              %img.img-responsive.pull-left{:alt => "rotate-img", :src => asset_path("img/rotate.png")}/
            %h3 OUR NEW CATALOG IS HERE
            %p
              The latest issue now available online.
              %a{:href => "#"} View Now
          / .f-left ends
          .f-center.pull-left
            .exclusive.pull-left
              %img{:alt => "saks-img", :src => asset_path("img/saks.png")}/
              %img{:alt => "first-img", :src => asset_path("img/first.png")}/
