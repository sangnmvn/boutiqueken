<%if @success %>
$(".td_<%=@item.id%> .pp-edit").show();
$(".td_<%=@item.id%> .saks-bag-item-qnt").show();
$(".td_<%=@item.id%> .saks-bag-item-qnt span").html("<%=@item.quantity%>");
