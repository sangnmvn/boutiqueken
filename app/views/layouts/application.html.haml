          /   %a{:href => "#"}
          /     %img{:alt => "nav-img", :src => "/assets/img/_Fall2_FLP_MTE_5._V279116091_.jpg"}/
          / SLIDER BOTTOM MENU MARKUP ENDS
          
        / HOME RIGHT SIDE CONTENT MARKUP ENDS
      / .container ends
