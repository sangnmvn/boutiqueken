    / HEADER STARTS
    =render "shared/header"
    %section.section-home-2
      .container
        =render "shared/left_bar"
        / HOME RIGHT CONTENT MARKUP
        .home-right-content
          / TOP SLIDER AREA STARTS
          .section-slider-area.no-mar-top
            %h2.sr-only Main Slider Area
            #slider-1.carousel.slide.fix-slider{"data-ride" => "carousel"}
              / Indicators
              %ol.carousel-indicators
                %li.active{"data-slide-to" => "0", "data-target" => "#slider-1"}
                %li{"data-slide-to" => "1", "data-target" => "#slider-1"}
                %li{"data-slide-to" => "2", "data-target" => "#slider-1"}
                %li{"data-slide-to" => "3", "data-target" => "#slider-1"}
                %li{"data-slide-to" => "4", "data-target" => "#slider-1"}
              / Wrapper for slides
              .carousel-inner{:role => "listbox"}
                .item.active
                  %a{:href => "https://www.boutiqueken.com/cat/women"}
                    %img.img-responsive{:alt => "slider-image", :src => asset_path("img/slider/0.jpg")}/
                .item
                  %a{:href => "https://www.boutiqueken.com/cat/gifts"}
                    %img.img-responsive{:alt => "slider-image", :src => asset_path("img/slider/1.jpg")}/
                .item
                  %a{:href => "https://www.boutiqueken.com/cat/women-jeans"}
                    %img.img-responsive{:alt => "slider-image", :src => asset_path("img/slider/2.jpg")}/
                .item
                  %a{:href => "https://www.boutiqueken.com/cat/handbags"}
                    %img.img-responsive{:alt => "slider-image", :src => asset_path("img/slider/3.jpg")}/
                .item
                  %a{:href => "https://www.boutiqueken.com/cat/gifts"}
                    %img.img-responsive{:alt => "slider-image", :src => asset_path("img/slider/4.jpg")}/
              / .carousel-inner ends
              / Controls
              %a.left.carousel-control{"data-slide" => "prev", :href => "#slider-1", :role => "button"}
                %i.fa.fa-angle-left{"aria-hidden" => "true"}
                %span.sr-only Previous
              %a.right.carousel-control{"data-slide" => "next", :href => "#slider-1", :role => "button"}
                %i.fa.fa-angle-right{"aria-hidden" => "true"}
                %span.sr-only Next
            / #slider-1 ends
          / TOP SLIDER AREA ENDS
          / SLIDER BOTTOM MENU MARKUP
