                  %span
                    %i.fa.fa-pencil{"aria-hidden" => "true"}
                    %a{:href => "#"} Edit
              / .table-btm-qt
              / checkout-table
              %table.checkout-table
                %tr
                  %td
                    %b Item Total
                  %td.text-right $498.00
                %tr
                  %td
                    %b Gift Wrap
                  %td.text-right $0.00
                %tr
                  %td
                    %b Estimated Shopping &amp; Handling
                  %td.text-right $0.00
                %tr
                  %td
                    %b Total Before Tax
                  %td.text-right $498.00
                %tr.checkout-table-last
                  %td
                    %b Estimated Tax
                  %td.text-right $0.00
                %tr.checkout-table-total
                  %td
                    %b Estimated Total
                  %td.text-right
                    %b $498.00
              / CHECKOUT TABLE ENDS
            / LONG TABLE ENDS
          / COL-5 ENDS
        / ROW ENDS
      / common-section-body
