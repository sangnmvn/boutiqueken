<h3 class="heading_b uk-margin-bottom">Order Detail</h3>
<div class="md-card">
  <div class="md-card-content">
    <ul class="md-list">
      <li>
        <div class="md-list-content">
          <span class="md-list-heading">Billing Address</span>
          <span class="uk-text-small uk-text-muted"><%=@billing.full_name%></span>
          <span class="uk-text-small uk-text-muted"><%=@billing.show_address%></span>
          <span class="uk-text-small uk-text-muted"><%=@billing.city_state%></span>
          <span class="uk-text-small uk-text-muted"><%=@billing.city_state%></span>
        </div>
      </li>
      <li>
        <div class="md-list-content">
          <span class="md-list-heading">Payment Type</span>
          <span class="uk-text-small uk-text-muted">Cash on delivery</span>
        </div>
      </li>
      <!-- <li>
        <div class="md-list-content">
          <span class="md-list-heading">Promo Code</span>
          <span class="uk-text-small uk-text-muted">Lorem ipsum dolor sit amet.</span>
        </div>
      </li> -->
      <li>
        <div class="md-list-content">
          <span class="md-list-heading">Email Address</span>
          <span class="uk-text-small uk-text-muted"><%=@order.email%></span>
        </div>
      </li>
      <!-- <li>
        <div class="md-list-content">
          <span class="md-list-heading">Gift Card</span>
          <span class="uk-text-small uk-text-muted">Lorem ipsum dolor sit amet.</span>
        </div>
      </li> -->
      <li>
        <div class="md-list-content">
          <ul class="md-list">
            <li>
              <div class="md-list-content">
                <span class="md-list-heading">Shipping Address</span>
                <span class="uk-text-small uk-text-muted"><%=@shipping.full_name%></span>
                <span class="uk-text-small uk-text-muted"><%=@shipping.show_address%></span>
                <span class="uk-text-small uk-text-muted"><%=@shipping.city_state%></span>
                <span class="uk-text-small uk-text-muted"><%=@shipping.city_state%></span>
              </div>
            </li>
            <li>
              <div class="md-list-content">
                <div class="uk-width-1-1">
                    <div class="uk-overflow-container">
                        <table class="uk-table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Size</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Status</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @order.order_details.each do |i| %>
                                  <tr>
                                    <td><img class="img_thumb" src="<%=
                                      (i.product_price_detail_id.present?)? show_image_cus_love(i.product_image): show_image_cus_love(i.product_image)%>" alt=""></td>
                                    <td class="uk-text-large uk-text-nowrap"><a href=""><%=i.product_name%></a></td>
                                    <td class="uk-text-nowrap"><%=i.size%></td>
                                    <td class="uk-text-nowrap"><%="#{i.currency_by_user} $"%> <%=show_2digit(i.price_by_currency)%></td>
                                    <td><%=i.quantity%></td>
                                    <td class="uk-text-nowrap"><span class="uk-badge uk-badge-muted" style="float: none">In Stock</span></td>
                                    <td class="uk-text-nowrap"><%="#{i.currency_by_user} $"%><%=show_2digit(i.subtotal_by_currency)%></td>
                                </tr>
                              <%end%>
                            </tbody>
                        </table>
                    </div>
      
                    <div class="md-list-content">
                      <span class="md-list-heading">Shipping Method</span>
                      <span class="uk-text-small uk-text-muted">Standard (est. delivery 10/ 07 16)</span>
                    </div>
                </div>
              </div>
            </li>
        </div>
      </li>
      <li class="uk-margin-medium-top">
        <div class="md-list-content">
          <span class="md-list-heading"><b>FREE SHIPPING</b>, Every Day, Every Onder, No Code Needed</span>
          <div class="uk-width-1-2">
              <div class="uk-overflow-container">
                  <table class="uk-table">
                      <tbody>
                          <tr>
                              <td class="uk-text-bold uk-text-italic uk-text-small">Item Total</td>
                              <td class="uk-text-nowrap">
                                <%="#{@order.currency_by_user} $"%>
                                <%=show_2digit(@order.total_by_currency)%>
                                <br /> (All tax included)
                                </td>
                          </tr>
                          <tr>
                              <td class="uk-text-bold uk-text-italic uk-text-small">Estimated Shopping & Handling</td>
                              <td class="uk-text-nowrap"><%="#{@order.currency_by_user} $ 0.00"%></td>
                          </tr>
                          <tr>
                              <td class="uk-text-bold">Estimated Total</td>
                              <td class="uk-text-bold uk-text-italic"><%="#{@order.currency_by_user} $"%>
                                  <%=show_2digit(@order.total_by_currency)%></td>
                          </tr>
                      </tbody>
                  </table>
              </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>