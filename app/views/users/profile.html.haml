%section.section-signin-area
  .container
    %h2.sr-only My Account Navigation Area
    .account-inner
      .row
        .col-md-3.col-sm-3
          =render "left_menu"
        / .col-md-3 ends
        .col-md-7.col-sm-9
          .all-informations-wrapper
            / ACCOUNT INFORMATION AREA Starts
            .single-account.show.account-information{"data-account" => "information"}
              = form_for(@user, url: user_path(@user), html: {class: "form-horizontal validate-form", "data-parsley-validate" => true, autocomplete: "off"}) do |f|
                %h1 Edit Account Information
                %p.required-p *Required Information
                .sign-in-col.sign-in-col-has-required
                  %h4 account information
                  .devise-error
                    -if flash.present? && flash[:error].present?
                      %div.error-txt
                        = flash[:error]
                  .devise-notice
                    -if flash.present? && flash[:notice].present?
                      %div.notice-txt
                        = flash[:notice]
                  .info-form-group
                    %label{:for => "first-name"} First Name
                    / %input#first-name{:required => "required", :type => "text"}/
                    = f.text_field :first_name, autofocus: true, autocomplete: "off", placeholder: "First Name", :required =>"required", "data-parsley-trigger" => "change", "data-parsley-required-message" => "Oops, First Name is required!",:id =>"first-name"
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "last-name"} Last Name
                    / %input#last-name{:required => "required", :type => "text"}/
                    = f.text_field :last_name,autocomplete: "off", placeholder: "Last Name", :required =>"required", "data-parsley-trigger" => "change", "data-parsley-required-message" => "Oops, Last Name is required!",:id =>"last_name"
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "email-address"} Email Address
                    / %input#email-address{:required => "required", :type => "email"}/
                    = f.text_field :email, autofocus: true, autocomplete: "off", placeholder: "Email", :required =>"required", "data-parsley-type" =>"email", "data-parsley-trigger" => "change", "data-parsley-required-message" => "Oops, Email is required!",:id =>"email",disabled: "disabled"
                  / .info-form-group ends
                  .info-form-group.info-form-group-single
                    .checkbox-input-block
                      %label.control.control--checkbox.change-password-trigger
                        Change Password
                        %input{:type => "checkbox",:checked =>"checked"}/
                        %span.control__indicator
                    / .checkbox-input-block ends
                  / .info-form-group ends
                / .sign-in-col ends
                .change-password-slideToggle
                  .sign-in-col.sign-in-col-has-required
                    %h4 change password
                    .info-form-group
                      %label{:for => "current-password"} Current Password
                      / %input#current-password{:required => "required", :type => "password"}/
                      =f.password_field :current_password, autocomplete: "off",placeholder: "Current password", :required =>"required", "data-parsley-required-message" => "Oops, Current password is required!","data-parsley-trigger" => "change",:id =>"current-password"
                    / .info-form-group ends
                    .info-form-group
                      %label{:for => "new-password"} New Password
                      / %input#new-password{:required => "required", :type => "password"}/
                      = f.password_field :password, autocomplete: "off",placeholder: "Password", :required =>"required", "data-parsley-required-message" => "Oops, Password is required!","data-parsley-trigger" => "change",:id =>"new-password"
                    / .info-form-group ends
                    .info-form-group
                      %label{:for => "confirm-password"} Confirm New Password
                      / %input#confirm-password{:required => "required", :type => "password"}/
                      = f.password_field :password_confirmation, autocomplete: "off",placeholder: "Password", :required =>"required", "data-parsley-required-message" => "Oops, Password Confirmation is required!","data-parsley-trigger" => "change",:id =>"confirm-password","data-parsley-equalto"=>"#new-password","parsley-equalto-message" => "Password confirmation does not match"
                    / .info-form-group ends
                  / .sign-in-col ends
                / .change-password-slideToggle ends
                .signup-submit-buttons
                  %button Cancel
                  %button{:type => "submit"} SAVE
                / .signup-submit-buttons ends
            / .single-account ends
            / ACCOUNT INFORMATION AREA Ends
            / ADDRESS BOOK AREA Starts
            .single-account.address-book{"data-account" => "address"}
              %form{:action => "#"}
                %h1 Add New Address
                %p.required-p *Required Information
                .sign-in-col.sign-in-col-has-required
                  %h4 contact information
                  .info-form-group
                    %label{:for => "first-name2"} First Name
                    %input#first-name2{:required => "required", :type => "text"}/
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "last-name2"} Last Name
                    %input#last-name2{:required => "required", :type => "text"}/
                  / .info-form-group ends
                  .info-form-group.full-width
                    %label{:for => "company"} Company
                    %input#company{:type => "text"}/
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "telephone"} Telephone
                    %input#telephone{:required => "required", :type => "text"}/
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "fax"} Fax
                    %input#fax{:type => "text"}/
                  / .info-form-group ends
                / .sign-in-col ends
                .sign-in-col.sign-in-col-has-required
                  %h4 address
                  .info-form-group.full-width
                    %label{:for => "street"} Street Address
                    %input#street.street-1{:required => "required", :type => "text"}/
                    %input{:type => "text"}/
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "city"} City
                    %input#city{:required => "required", :type => "text"}/
                  / .info-form-group ends
                  .info-form-group
                    .account-input-block
                      %label{:for => "zip"}
                        State/Province
                        %span.re.hidden-lg.hidden-md.hidden-sm *
                      .select
                        %select#zip{:name => "zip", :required => "required"}
                          %option{:selected => "selected", :value => ""} Please select state/province
                          %option{:value => "0"} option 1
                          %option{:value => "1"} option 2
                          %option{:value => "2"} option 3
                          %option{:value => "3"} option 4
                        .select__arrow
                      / .select ends
                    / .account-input-block ends
                  / .info-form-group ends
                  .info-form-group
                    %label{:for => "zip2"} Zip/Postal Code
                    %input#zip2{:required => "required", :type => "text"}/
                  / .info-form-group ends
                  .info-form-group
                    .account-input-block
                      %label{:for => "country"}
                        Country
                        %span.re.hidden-lg.hidden-md.hidden-sm *
                      .select
                        %select#country{:name => "country", :required => "required"}
                          %option{:selected => "selected", :value => ""} United States
                          %option{:value => "2"} Alzeria
                          %option{:value => "3"} Bangladesh
                          %option{:value => "4"} Brazil
                          %option{:value => "5"} Australia
                        .select__arrow
                      / .select ends
                    / .account-input-block ends
                  / .info-form-group ends
                / .sign-in-col ends
                .signup-submit-buttons
                  %button Cancel
                  %button{:type => "submit"} SAVE
                / .signup-submit-buttons ends
            / .single-account ends
            / ADDRESS BOOK AREA Ends
            / DASHBOARD AREA Starts
