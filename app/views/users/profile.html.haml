                  %i.fa.fa-user{"aria-hidden" => "true"}
                  ACCOUNT INFORMATION
                .dash-details
                  .row
                    .col-md-6.col-sm-6
                      .c-single-info
                        %header
                          %h5.pull-left Contact Information
                          %a.pull-right{:href => "#"} Edit
                        %span.u-name John Smith
                        %span.u-email john.smith@gmail.com
                        %a{:href => "#"} Change Password
                    / .col-md-6 ends
                    .col-md-6.col-sm-6
                      .c-single-info
                        %header
                          %h5.pull-left Contact Information
                          %a.pull-right{:href => "#"} Edit
                        You are currently not subscribed to any newsletter.
                    / .col-md-6 ends
                    .col-md-12.col-sm-12
                      .c-single-info.full-c-info
                        %header
                          %h5.pull-left Address Book
                          %a.pull-right{:href => "#"} Manage addresses
                        .row
                          .col-md-6.col-sm-6
                            .c-single-info
                              %strong Default Billing Address
                              %span You've not set a default billing address
                              %a{:href => "#"} Edit Address
                          .col-md-6.col-sm-6
                            %strong Default Shipping Address
                            %span You've not set a default shipping address
                            %a{:href => "#"} Edit Address
                        / .row ends
                      / .c-single-info ends
                    / .col-md-12 ends
                  / .row ends
                / .dash-details ends
              / .sign-in-col ends
            / .single-account ends
            / DASHBOARD AREA Ends
            / ORDER AREA Starts
