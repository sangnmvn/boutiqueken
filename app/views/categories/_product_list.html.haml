/ PRODUCTS AREA STARTS

.main-product-area
  .sort-by-area
    .sort-left
      %h1.pull-left Shop All
    / .sort-left ends
    .sort-right.hidden-xs
      .single-view-option.items
        %a{:href => "#"}
          %span 23,952
          lteams
      .single-view-option.view-number.hidden-xs
        %a{:href => "#"} View 60
        %a{:href => "#"}
          %span 180
      .single-view-option.view-pagi.hidden-xs
        %span.current 1
        of
        %span.total 400
      .single-view-option.pagi
        %a{:href => "#"}
          %i.fa.fa-chevron-left
        %ul.product-pagination
          %li
            %a{:href => "#"} 2
          %li
            %a{:href => "#"} 3
          %li
            %a{:href => "#"} 4
          %li
            %a{:href => "#"} 5
        %a{:href => "#"}
          %i.fa.fa-chevron-right
      / .single-view-option.pagi ends
    / .sort-right ends
  / .sort-by-area ends
  .product-showcase
    .row
      .product-item-div
        / SINGLE PRODUCT starts
        -@products.each do |i|
          .col-md-3.col-sm-4
            .single-product
              .product-img-wrapper
                -if i.product_details.present?
                  -i.product_details.each_with_index do |detail,index|
                    %img.img-responsive.has-color.active{:alt => "product", "data-img" => "p-#{index}", :src => detail.color_image}/
              / .product-img-wrapper ends
              .product-details-info
                -if i.product_details.present?
                  %ul.coloring-ul
                    -i.product_details.each_with_index do |detail,index|
                      %li{"data-color" => "Black", "data-img" => "p-#{index}"}
                        %a{:href => "#"}
                          %img.img-responsive{:alt => "", :src => detail.product_image}/
                  
                %strong
                  %a{:href => "#"}=i.product_name
                %span.reg-price
                  %strong 
                    Reg. $
                    =i.orginal_price
                %span.sale-price
                  %strong
                    Ssle. $
                    =i.sale_price
            / .single-product ends
          / .col-md-4 ends
          / SINGLE PRODUCT ends
        
        / .col-md-4 ends
        / SINGLE PRODUCT ends
      .sort-right.sort-right-bottom
        .single-view-option.items
          %a{:href => "#"}
            %span 23,952
            lteams
        .single-view-option.view-number.hidden-xs
          %a{:href => "#"} View 60
          %a{:href => "#"}
            %span 180
        .single-view-option.view-pagi.hidden-xs
          %span.current 1
          of
          %span.total 400
        .single-view-option.pagi
          %a{:href => "#"}
            %i.fa.fa-chevron-left
          %ul.product-pagination
            %li
              %a{:href => "#"} 2
            %li
              %a{:href => "#"} 3
            %li
              %a{:href => "#"} 4
            %li
              %a{:href => "#"} 5
          %a{:href => "#"}
            %i.fa.fa-chevron-right
        / .single-view-option.pagi ends
      / .sort-right ends
    / .row ends
  / .product-showcase ends
/ .main-product-area ends
/ .col-md-10 ends
